{
    "printWidth": 120,
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "plugins": ["prettier-plugin-svelte"],
    "bracketSpacing": true,
    "bracketSameLine": true,
    "arrowParens": "always",
    "overrides": [
        {
            "files": ["*.scss", "*.json"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
